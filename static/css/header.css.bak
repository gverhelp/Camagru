body { 
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

.header {
  display: flex;
  background-color: #FCFCFB;
  box-shadow: 0 4px 4px rgba(0, 0, 0, 0.1);
}

.header a.logo {
  flex: 100%;
}

.header a.search {
  flex: 100%;
}

.header a.auth {
  flex: 100%;
}

.searchbar {
  background-color: rgb(217, 217, 217);
  border-radius: 20px;
  padding: 6px;
  width: 100%;
  height: 50%;
  margin-top: 6px;
}

.searchbar input[type=text] {
  background-color: rgb(217, 217, 217);
  width: 90%;
  height: 100%;
  float: left;
  border: none;
  text-align: center;
}

.searchbar input[type=text]:focus {
  border-color: rgb(244, 5, 5);
}

.searchbar button {
  width: 10%;
  cursor: pointer;
  height: 100%;
  float: right;
  border: none;
  border-left: solid;
  border-left-color: rgb(184, 183, 183);
  background-color: rgb(217, 217, 217);
}
